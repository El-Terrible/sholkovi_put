<section class="main_page">
  <div class="row">
    <div class="col-md-3 col-sm-3">
      <%= render 'layouts/menu' %>

      <div class="question">
        <div class="question_headling">
          <div class="question_icon"></div>
          <h2>Есть вопросы?</h2>
          <p>Мы вам поможем!</p>
        </div>
        <button>Задать вопрос</button>

      </div>
    </div>
    <div class="col-md-9 col-sm-9">
      <div class="slider_container">

      <% @slide.each do |slide| %>
        <div class="slide" style="background-image: url(<%= slide.photo %>)">
          <div class="slider_headling">
            <h2><%= slide.title %></h2>
          </div>
          <div class="slider_desctription">
            <p><%= slide.description %></p>
          </div>
        </div>
      <% end %>

      </div>
    </div>
  </div>

  <div class="headling">ЛУЧШИЕ ТОВАРЫ</div>
  <div class="row best_products">

    <% @best_product.each do |product| %>
        <div class="col-md-3 col-sm-3">

            <div class="best_product">
              <h3> <%= link_to product.name, home_product_path(product) %></h3>
              <div class="product_photo" style="background-image: url('<%= product.decript_photo %>')">

              </div>

              <div class="product_price"><%= product.price %></div>
              <div class="product_adress">Место склада: <span><%= product.city.name %></span></div>
            </div>
            <div class="more_broduct"><%= link_to 'Больше товаров', home_katalogs_url %></div>

        </div>
    <% end %>

  </div>

</section>
